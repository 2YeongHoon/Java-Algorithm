class Solution {
    public int solution(int n) {
        int answer = 0;
        for(int i = 1; i <= n; i++){
            if(isEven(i)){
                answer = answer + i;
            }
        }
        return answer;
    }
    
    private boolean isEven(int num){
        return num % 2 == 0 ? true : false;
    }
}
